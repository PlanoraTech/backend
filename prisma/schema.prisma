generator client {
    provider = "prisma-client-js"
    previewFeatures = ["relationJoins"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum InstitutionType {
    SCHOOL
    UNIVERSITY
    COLLEGE
    COMPANY
}

enum AccessType {
    PRIVATE
    PUBLIC
}

enum Roles {
    USER
    PRESENTATOR
    DIRECTOR
}

enum Permissions {
    READ
    WRITE
}

enum SpecialPermissions {
    SUBSTITUTE
    CHANGE_ROOM
}

model RolesToPermissions {
    role               Roles
    permissions        Permissions[]
    specialPermissions SpecialPermissions[]

    @@unique([role, permissions])
}

model Institutions {
    id           String                @id @default(uuid())
    name         String                @unique
    type         InstitutionType
    access       AccessType
    color        String                @unique
    website      String                @unique
    presentators Presentators[]
    subjects     Subjects[]
    rooms        Rooms[]
    timetables   TimeTables[]
    events       Events[]
    users        UsersToInstitutions[]

    @@index([access])
}

model Presentators {
    id            String                       @id @default(uuid())
    name          String                       @unique
    appointments  PresentatorsToAppointments[]
    Substitutions Substitutions[]
    institutions  Institutions[]
    user          UsersToInstitutions?
}

model Substitutions {
    id            String       @id @default(uuid())
    from          DateTime
    to            DateTime
    status        Boolean      @default(true)
    presentator   Presentators @relation(fields: [presentatorId], references: [id])
    presentatorId String

    @@index([presentatorId])
}

model Subjects {
    id            String         @id @default(uuid())
    name          String
    subjectId     String
    appointments  Appointments[]
    institution   Institutions   @relation(fields: [institutionId], references: [id])
    institutionId String

    @@index([institutionId])
}

model Rooms {
    id            String         @id @default(uuid())
    name          String
    appointments  Appointments[]
    institution   Institutions   @relation(fields: [institutionId], references: [id])
    institutionId String

    @@index([institutionId])
}

model Events {
    id            String       @id @default(uuid())
    title         String
    date          DateTime
    institution   Institutions @relation(fields: [institutionId], references: [id])
    institutionId String

    @@index([institutionId])
}

model TimeTables {
    id            String         @id @default(uuid())
    name          String
    appointments  Appointments[]
    institution   Institutions   @relation(fields: [institutionId], references: [id])
    institutionId String

    @@index([institutionId])
}

model Appointments {
    id           String                       @id @default(uuid())
    subject      Subjects                     @relation(fields: [subjectId], references: [id])
    subjectId    String
    presentators PresentatorsToAppointments[]
    rooms        Rooms[]
    start        DateTime
    end          DateTime
    isCancelled  Boolean                      @default(false)
    timetables   TimeTables[]

    @@index([subjectId, start, end])
}

model PresentatorsToAppointments {
    presentator   Presentators @relation(fields: [presentatorId], references: [id])
    presentatorId String
    appointment   Appointments @relation(fields: [appointmentId], references: [id])
    appointmentId String
    isSubstituted Boolean

    @@id([presentatorId, appointmentId])
    @@index([isSubstituted])
}

model Users {
    id                  String                @id @default(uuid())
    email               String                @unique
    password            String
    institutions        UsersToInstitutions[]
    tokens              Tokens[]
    notificationsTokens NotificationTokens[]
}

model UsersToInstitutions {
    user          Users         @relation(fields: [userId], references: [id])
    userId        String
    institution   Institutions  @relation(fields: [institutionId], references: [id])
    institutionId String
    role          Roles         @default(USER)
    presentator   Presentators? @relation(fields: [presentatorId], references: [id])
    presentatorId String?       @unique

    @@unique([userId, institutionId])
}

model Admins {
    id       String @id @default(uuid())
    email    String @unique
    password String
}

model Tokens {
    id     String   @id @default(uuid())
    token  String   @unique
    expiry DateTime @default(now())
    user   Users    @relation(fields: [userId], references: [id])
    userId String

    @@index([token, userId])
}

model NotificationTokens {
    id     String @id @default(uuid())
    token  String @unique
    user   Users  @relation(fields: [userId], references: [id])
    userId String
}
